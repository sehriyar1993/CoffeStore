@using CoffeStore.ViewComponents;
@model UserEditViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Admin.cshtml";
}


<div class="wrapper wrapper-content animated fadeInRight">
    
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox product-detail">
                    <div class="ibox-content">
                        <div class="row">
                            <div class="col-md-5">
                                <div class="product-images">
                                    <img src="@Model.imageurl" style="width:450px; height:385px;" />
                                </div>
                            </div>
                            <div class="col-lg-7">
                                <div class="ibox ">
                                    <div class="ibox-title">
                                      
                                    </div>
                                <fieldset>
                                    <h2>@Model.name profili</h2>
                                    <form method="post" class="row">
                                        <div class="col-lg-12">

                                            <div class="form-group">
                                                <label>Adınız və Soyadınız *</label>
                                                <input id="userName" asp-for="name" type="text" class="form-control required">
                                            </div>
                                            <div class="form-group">
                                                <label>Mail Adresiniz *</label>
                                                <input id="userName" asp-for="mail" type="text" class="form-control required">
                                            </div><div class="form-group">
                                                <label>Nömrəniz *</label>
                                                <input id="userName" asp-for="phonenumber" type="text" class="form-control required">
                                            </div><div class="form-group">
                                                <label>İstifadəçi Adı *</label>
                                                <input id="userName" asp-for="username" type="text" class="form-control required">
                                            </div><div class="form-group">
                                                <label>Şəkliniz *</label>
                                                <input id="userName" asp-for="imageurl" type="text" class="form-control required">
                                            </div>
                                        </div>
                                        <input type="submit" value="Dəyişiklikləri Yüklə" class="btn btn-danger  dim ">
                                    </form>

                                </fieldset>
                                    
                                </div>
                            </div>

                        </div>

                    </div>

                </div>
            </div>
        </div>
    
</div>






