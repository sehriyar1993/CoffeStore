@using CoffeStore.EL;
@model List<HomeClass>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<div class="wrapper wrapper-content animated fadeInRight">
    @foreach (var m in Model)
    {
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox product-detail">
                    <div class="ibox-content">
                        <div class="row">
                            <div class="col-md-5">
                                <div class="product-images">
                                    <img src="@m.Image1" style="width:450px; height:385px;" />
                                </div>
                            </div>
                            <div class="col-md-7">
                                <h4 class="font-bold m-b-xs">
                                    @m.Title ,@m.About,@m.Description
                                </h4>
                                <small>@m.BannerAbout @m.BannerTitle @m.BannerDescription</small>
                                <hr>
                                <h4> @m.Title2 ,@m.About2,@m.Description2</h4>
                                <div class="small text-muted">
                                    <small>@m.BannerAbout2 @m.BannerTitle2 @m.BannerDescription2</small>
                                </div>
                                <h4> <small>@m.BannerAbout4 @m.BannerTitle4 @m.BannerDescription4</small></h4>
                                <div class="small text-muted">
                                    <small>@m.BannerAbout3 @m.BannerTitle3 @m.BannerDescription3</small>
                                </div>
                                <hr>
                                <div class="attachment">

                                    <div class="file-box">
                                        <div class="file">
                                            <a href="#">
                                                <span class="corner"></span>

                                                <div class="image">
                                                    <img alt="image" class="img-fluid" src="@m.Image2" style="width:225px; height:180px;">
                                                </div>
                                                <div class="file-name">
                                                </div>
                                            </a>
                                        </div>
                                    </div>
                                    <div class="file-box">
                                        <div class="file">
                                            <a href="#">
                                                <span class="corner"></span>

                                                <div class="image">
                                                    <img alt="image" class="img-fluid" src="@m.Image3" style="width:225px; height:180px;">
                                                </div>
                                                <div class="file-name">
                                                </div>
                                            </a>
                                        </div>
                                    </div>
                                    <div class="file-box">
                                        <div class="file">
                                            <a href="#">
                                                <span class="corner"></span>

                                                <div class="image">
                                                    <iframe src="https://www.youtube.com/embed/@m.YTVideo1" frameborder="0"
                                                            allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture"
                                                            allowfullscreen style="width:225px; height:180px;"></iframe>
                                                    <h3 class="video-title mt-4"></h3>
                                                    
                                                </div>
                                                <div class="file-name">
                                                </div>
                                            </a>
                                        </div>
                                    </div>
                                    <div class="file-box">
                                        <div class="file">
                                            <a href="#">
                                                <span class="corner"></span>

                                                <div class="image">
                                                    <iframe src="https://www.youtube.com/embed/@m.YTVideo2" frameborder="0"
                                                            allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture"
                                                            allowfullscreen style="width:225px; height:180px;"></iframe>
                                                    <h3 class="video-title mt-4"></h3>

                                                </div>
                                                <div class="file-name">
                                                </div>
                                            </a>
                                        </div>
                                    </div>
                                    <div class="clearfix"></div>
                                </div>

                                <div>
                                    <div class="btn-group">
                                        <a href="/AdminHome/Add/" class="btn btn-primary btn-sm"><i class="fa fa-cart-plus"></i>Yeni</a>
                                        <a href="/AdminHome/Delete/@m.Id" class="btn btn-white btn-sm"><i class="fa fa-archive"></i>Sil</a>
                                        <a href="/AdminHome/Update/@m.Id" class="btn btn-white btn-sm"><i class="fa fa-refresh"></i>Yenilə</a>
                                        @if (m.Status == true)
                                        {
                                            <a href="/AdminHome/ChangeToFalse/@m.Id" class="btn btn-white btn-sm"><i class="fa fa-check-square-o "> </i>Passiv et</a>
                                        }
                                        else
                                        {
                                            <a href="/AdminHome/ChangeToTrue/@m.Id" class="btn btn-white btn-sm"><i class="fa fa-check-square "> </i>Aktiv et</a>
                                        }

                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>

                </div>
            </div>
        </div>
    }
</div>

