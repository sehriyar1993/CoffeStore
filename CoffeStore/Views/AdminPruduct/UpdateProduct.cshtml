@using CoffeStore.EL;
@model Product
@{
    ViewData["Title"] = "UpdateProduct";
    Layout = "~/Views/Shared/_Admin.cshtml";
}



<div class="row">
    <div class="col-lg-12">
        <div class="ibox ">
            <div class="ibox-title">
                <h1>Yenilə</h1>
                <form method="post">
                    <input type="hidden" asp-for="ProductId" class="form-control" />

                    <div class="form-group">
                        @Html.Label("Kateqoriya Seçimi")
                        @Html.DropDownListFor(x=>x.CategoryId,(List<SelectListItem>)ViewBag.v1,new {@class="form-control"})
                    </div>
                    <div class="form-group">
                        @Html.Label("Adı və Markası")
                        <input type="text" asp-for="Name" class="form-control" />
                    </div>
                    <br />
                    <div class="form-group">
                        @Html.Label("Alış Qiyməti")
                        <input type="text" asp-for="Price" class="form-control" />
                    </div>
                    <br />
                
                    <br />
                    <div class="form-group">
                        @Html.Label("Qiymət")
                        <input type="text" asp-for="PriceValue" class="form-control" />
                    </div>

                 
                    <div class="form-group">
                        @Html.Label("Şəkil")
                        <input type="text" asp-for="Image" class="form-control" />
                       
                    </div>
          
                    <br />
                    <div class="form-group">
                        @Html.Label("Haqqında")
                        <textarea cols="30" rows="5" class="form-control" asp-for="Description"></textarea>
                    </div>
                    <br />
                    <button type="submit" id="btn1" class="btn btn-primary submit mb-4">Təsdiqlə</button>

                    <br />
                    <br />
                    <br />
                    <br />
                </form>
            </div>
        </div>
    </div>
</div>


