@model CoffeStore.EL.Product

@{
    ViewData["Title"] = "ProductSıngle";
    Layout = "~/Views/Shared/_Admin.cshtml";
}
<link href="~/admin/css/animate.css" rel="stylesheet">
<link href="~/admin/css/style.css" rel="stylesheet">
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Məhsul Haqqında</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="index.html">Admin</a>
            </li>
            <li class="breadcrumb-item">
                <a>Məhsullar</a>
            </li>
            <li class="breadcrumb-item active">
                <strong>Məhsul Haqqında</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>

<div class="mail-box-header">
   
    <div class="mail-tools tooltip-demo m-t-md">


        <h3>
            <span class="font-normal">Adı: </span>@Model.Name
        </h3>
       
    </div>
</div>
<div class="mail-box">


    <div class="mail-body">
        <p>
            Məhsul Haqqında
            <br />
            <br />
            @Model.Description
        </p>
       
        <p>
            Qiyməti <strong>@Model.Price</strong>
        </p>
    </div>
    <div class="mail-attachment">
        <p>
            <span><i class="fa fa-paperclip"></i> @Model.Name </span>
            |
        </p>

        <div class="attachment">
            <div class="file-box">
                <div class="file">
                    <a href="#">
                        <span class="corner"></span>

                        <div class="image">
                            <img alt="image" class="img-fluid" src="@Model.Image" height="100" width="100">
                        </div>
                        <div class="file-name">
               
                        </div>
                    </a>
                </div>

            </div>
        
            <div class="clearfix"></div>
        </div>
    </div>
    <div class="mail-body text-right tooltip-demo">
        <a class="btn btn-sm btn-white" href="/AdminPruduct/UpdateProduct/@Model.ProductId"><i class="fa fa-reply"></i> Yenilə</a>
        <a class="btn btn-sm btn-white" href="/AdminPruduct/DeleteProduct/@Model.ProductId"><i class="fa fa-arrow-right"></i> Sil</a>
       
    </div>
    <div class="clearfix"></div>


</div><script src="~/admin/js/plugins/slick/slick.min.js"></script>

<script>
    $(document).ready(function () {


        $('.product-images').slick({
            dots: true
        });

    });

</script>
